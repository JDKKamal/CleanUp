<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small"
            app:cardBackgroundColor="@color/colorCardViewBackground"
            app:cardCornerRadius="@dimen/extraTiny"
            app:cardElevation="@dimen/extraTiny"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/appTvCompanyId"
                            style="@style/TextSemiBoldSizeRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:padding="@dimen/small"
                            android:text="@string/company_id"
                            android:textColor="@color/colorBlack" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/appIvImagePurchase"
                                android:layout_width="@dimen/dimen_profile"
                                android:layout_height="@dimen/dimen_profile"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/iv_profile_placeholder"
                                android:padding="@dimen/extraTiny" />

                            <ProgressBar
                                android:id="@+id/progressBar"
                                android:layout_width="@dimen/extraLarge"
                                android:layout_height="@dimen/extraLarge"
                                android:layout_centerInParent="true"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="@dimen/small">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/large"
                                        android:layout_height="@dimen/large" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/appTvCompanyName"
                                        style="@style/TextSemiBoldSizeRegular"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/small"
                                        android:layout_gravity="center_vertical"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/company_name"
                                        android:textColor="@color/colorBlack" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small"
                                    android:orientation="horizontal">

                                    <android.support.v7.widget.AppCompatImageView
                                        android:layout_width="@dimen/large"
                                        android:layout_height="@dimen/large"
                                        android:src="@drawable/ic_mobile" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/appTvCompanyMobile"
                                        style="@style/TextRegularSizeMedium"
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="@dimen/small"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/mobile"
                                        android:textColor="@color/colorBlack" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small"
                                    android:orientation="horizontal">

                                    <android.support.v7.widget.AppCompatImageView
                                        android:layout_width="@dimen/large"
                                        android:layout_height="@dimen/large"
                                        android:src="@drawable/ic_date" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/appTvCompanyStart"
                                        style="@style/TextRegularSizeMedium"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/small"
                                        android:layout_gravity="center_vertical"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/date_time"
                                        android:textColor="@color/colorBlack" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/appTvCompanyAddress"
                        style="@style/TextRegularSizeMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textColor="@color/colorHintEditText"
                        android:textSize="@dimen/medium_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/appCompanyLead"
                                style="@style/TextRegularSizeMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lead_status"
                                android:textColor="@color/colorHintEditText"
                                android:textSize="@dimen/medium_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/appTvCompanyCustomerTotal"
                                style="@style/TextRegularSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/customer_total"
                                android:textAlignment="center"
                                android:textColor="@color/colorHintEditText" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small"
            app:cardBackgroundColor="@color/colorCardViewBackground"
            app:cardCornerRadius="@dimen/extraTiny"
            app:cardElevation="@dimen/extraTiny"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/appTvCustomerId"
                            style="@style/TextSemiBoldSizeRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:padding="@dimen/small"
                            android:text="@string/customer_id"
                            android:textColor="@color/colorBlack" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/appTvCustomerEdit"
                            style="@style/TextRegularSizeSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:padding="@dimen/small"
                            android:text="@string/edit"
                            android:textColor="@color/colorLink" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/appIvImagePurchase"
                                android:layout_width="@dimen/dimen_profile"
                                android:layout_height="@dimen/dimen_profile"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/iv_profile_placeholder"
                                android:padding="@dimen/extraTiny" />

                            <ProgressBar
                                android:id="@+id/progressBar"
                                android:layout_width="@dimen/extraLarge"
                                android:layout_height="@dimen/extraLarge"
                                android:layout_centerInParent="true"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="@dimen/small">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/large"
                                        android:layout_height="@dimen/large" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/appTvCustomerName"
                                        style="@style/TextSemiBoldSizeRegular"
                                        android:layout_marginLeft="@dimen/small"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/customer_name"
                                        android:textColor="@color/colorBlack" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small"
                                    android:orientation="horizontal">

                                    <android.support.v7.widget.AppCompatImageView
                                        android:layout_width="@dimen/large"
                                        android:layout_height="@dimen/large"
                                        android:src="@drawable/ic_mobile" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/appTvCustomerMobile"
                                        style="@style/TextRegularSizeMedium"
                                        android:layout_marginLeft="@dimen/small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/mobile"
                                        android:textColor="@color/colorBlack" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small"
                                    android:orientation="horizontal">

                                    <android.support.v7.widget.AppCompatImageView
                                        android:layout_width="@dimen/large"
                                        android:layout_height="@dimen/large"
                                        android:src="@drawable/ic_email" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/appTvCustomerJoin"
                                        style="@style/TextRegularSizeMedium"
                                        android:layout_marginLeft="@dimen/small"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/email"
                                        android:textColor="@color/colorBlack" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/appTvCustomerAddress"
                            style="@style/TextRegularSizeMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address"
                            android:textColor="@color/colorHintEditText"
                            android:textSize="@dimen/medium_text" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/appTvCustomerLead"
                                    style="@style/TextRegularSizeMedium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/city_with_location"
                                    android:textColor="@color/colorHintEditText"
                                    android:textSize="@dimen/medium_text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/appTvDate"
                                    style="@style/TextRegularSizeRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/pincode"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorHintEditText" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>



