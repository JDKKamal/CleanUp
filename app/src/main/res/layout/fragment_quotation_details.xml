<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/appTvUserDetails"
                style="@style/TextRegularSizeSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/small"
                android:text="@string/user_details"
                android:textColor="@color/colorLink" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small"
                app:cardBackgroundColor="@color/colorCardViewBackground"
                app:cardCornerRadius="@dimen/extraTiny"
                app:cardElevation="@dimen/extraTiny"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/appTvUserId"
                                style="@style/TextSemiBoldSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:padding="@dimen/small"
                                android:text="@string/user_id"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/dimen_profile"
                                    android:layout_height="@dimen/dimen_profile"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/iv_profile_placeholder"
                                    android:padding="@dimen/extraTiny" />

                                <ProgressBar
                                    android:layout_width="@dimen/extraLarge"
                                    android:layout_height="@dimen/extraLarge"
                                    android:layout_centerInParent="true"
                                    android:visibility="visible" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:padding="@dimen/small">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_user" />

                                        <android.support.v7.widget.AppCompatTextView
                                            android:id="@+id/appTvUserName"
                                            style="@style/TextSemiBoldSizeRegular"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/small"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/username"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/small"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_mobile" />

                                        <android.support.v7.widget.AppCompatTextView
                                            style="@style/TextRegularSizeMedium"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/small"
                                            android:layout_weight="1"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/mobile"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/small"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_location" />

                                        <android.support.v7.widget.AppCompatTextView
                                            android:id="@+id/appTvUserCityLocation"
                                            style="@style/TextRegularSizeMedium"
                                            android:layout_width="match_parent"
                                            android:layout_marginLeft="@dimen/small"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/city_with_location"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/small">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/appTvUserAddress"
                                style="@style/TextRegularSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/address"
                                android:textColor="@color/colorHintEditText" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/appTvCustomerDetails"
                style="@style/TextRegularSizeSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/small"
                android:text="@string/customer_detail"
                android:textColor="@color/colorLink" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small"
                app:cardBackgroundColor="@color/colorCardViewBackground"
                app:cardCornerRadius="@dimen/extraTiny"
                app:cardElevation="@dimen/extraTiny"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/dimen_profile"
                                    android:layout_height="@dimen/dimen_profile"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/iv_profile_placeholder"
                                    android:padding="@dimen/extraTiny" />

                                <ProgressBar
                                    android:layout_width="@dimen/extraLarge"
                                    android:layout_height="@dimen/extraLarge"
                                    android:layout_centerInParent="true"
                                    android:visibility="visible" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:padding="@dimen/small">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_user" />

                                        <android.support.v7.widget.AppCompatTextView
                                            android:id="@+id/appTvCustomerName"
                                            style="@style/TextSemiBoldSizeRegular"
                                            android:layout_marginLeft="@dimen/small"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/customer_name"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/small"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_mobile" />

                                        <android.support.v7.widget.AppCompatTextView
                                            android:id="@+id/appTvCustomerMobile"
                                            style="@style/TextRegularSizeMedium"
                                            android:layout_width="wrap_content"
                                            android:layout_marginLeft="@dimen/small"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="1"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/mobile"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/small"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_location" />

                                        <android.support.v7.widget.AppCompatTextView
                                            android:id="@+id/appTvCustomerCityLocation"
                                            style="@style/TextRegularSizeMedium"
                                            android:layout_width="match_parent"
                                            android:layout_marginLeft="@dimen/small"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/city_with_location"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/appTvCleanUpDetails"
                style="@style/TextRegularSizeSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/small"
                android:text="@string/cleanup_details"
                android:textColor="@color/colorLink" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small"
                app:cardBackgroundColor="@color/colorCardViewBackground"
                app:cardCornerRadius="@dimen/extraTiny"
                app:cardElevation="@dimen/extraTiny"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/appTvLeadId"
                                style="@style/TextSemiBoldSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="@dimen/small"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:padding="@dimen/small"
                                android:text="@string/lead_id"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/dimen_profile"
                                    android:layout_height="@dimen/dimen_profile"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/iv_profile_placeholder"
                                    android:padding="@dimen/extraTiny" />

                                <ProgressBar
                                    android:layout_width="@dimen/extraLarge"
                                    android:layout_height="@dimen/extraLarge"
                                    android:layout_centerInParent="true"
                                    android:visibility="visible" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:padding="@dimen/small">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_user" />

                                        <android.support.v7.widget.AppCompatTextView
                                            style="@style/TextSemiBoldSizeRegular"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:layout_marginLeft="@dimen/small"
                                            android:maxLines="1"
                                            android:text="@string/lead_title"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/small"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_mobile" />

                                        <android.support.v7.widget.AppCompatTextView
                                            android:id="@+id/appTvLeadDate"
                                            style="@style/TextRegularSizeMedium"
                                            android:layout_width="wrap_content"
                                            android:layout_marginLeft="@dimen/small"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="1"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/date_time"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/small"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_location" />

                                        <android.support.v7.widget.AppCompatTextView
                                            android:id="@+id/appTvLeadProperties"
                                            style="@style/TextRegularSizeMedium"
                                            android:layout_marginLeft="@dimen/small"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/lead_properties"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/appTvQuotationLastDetail"
                style="@style/TextRegularSizeSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/small"
                android:text="@string/quotation_last_detail"
                android:textColor="@color/colorLink" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small"
                app:cardBackgroundColor="@color/colorCardViewBackground"
                app:cardCornerRadius="@dimen/extraTiny"
                app:cardElevation="@dimen/extraTiny"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/appTvQuotationID"
                                style="@style/TextSemiBoldSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:padding="@dimen/small"
                                android:text="@string/quotation_id"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/dimen_profile"
                                    android:layout_height="@dimen/dimen_profile"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/iv_profile_placeholder"
                                    android:padding="@dimen/extraTiny" />

                                <ProgressBar
                                    android:layout_width="@dimen/extraLarge"
                                    android:layout_height="@dimen/extraLarge"
                                    android:layout_centerInParent="true"
                                    android:visibility="visible" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:padding="@dimen/small">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_user" />

                                        <android.support.v7.widget.AppCompatTextView
                                            style="@style/TextSemiBoldSizeRegular"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/small"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/company_name"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/small"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_mobile" />

                                        <android.support.v7.widget.AppCompatTextView
                                            style="@style/TextRegularSizeMedium"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/small"
                                            android:layout_weight="1"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/mobile"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/small"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatImageView
                                            android:layout_width="@dimen/large"
                                            android:layout_height="@dimen/large"
                                            android:src="@drawable/ic_location" />

                                        <android.support.v7.widget.AppCompatTextView
                                            style="@style/TextRegularSizeMedium"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/small"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/city_with_location"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/small">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/appTvDate"
                                style="@style/TextRegularSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="@string/date_time"
                                android:textColor="@color/colorHintEditText" />

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextRegularSizeMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small"
                                android:text="@string/quotation_total"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/medium_text" />

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextRegularSizeMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small"
                                android:text="@string/lead_properties"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/medium_text" />

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextSemiBoldSizeMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/small"
                                android:text="@string/pay"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/medium_text" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
