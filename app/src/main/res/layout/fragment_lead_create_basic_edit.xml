<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/large">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/styleTextViewMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_lead_title" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/appEdtCompanyName"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:lines="1" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/appSelectLEadProperties"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium"
                        android:hint="@string/hint_select_properties"/>

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/styleTextViewMedium"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/medium"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_firstname" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/appEdtFirstName"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:lines="1" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/styleTextViewMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium"
                        android:text="@string/hint_lastname" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/appEdtLastName"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:lines="1" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/styleTextViewMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium"
                        android:text="@string/hint_email" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/appEdtEmail"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:lines="1" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/styleTextViewMedium"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/medium"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_mobile" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/appEdtMobile"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:lines="1" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/styleTextViewMedium"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/medium"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_city" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/appEdtCity"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:lines="1" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/styleTextViewMedium"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/medium"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_location" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/appEdtLocation"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:lines="1" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/styleTextViewMedium"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/medium"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_address" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/appEdtAddress"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:lines="1" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/styleTextViewMedium"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/medium"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_pincode" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/appEdtPinCode"
                        style="@style/styleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:lines="1" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/appBtnSubmit"
                        style="@style/ButtonTheme"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/huge"
                        android:layout_marginTop="@dimen/medium"
                        android:text="@string/btn_submit" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>